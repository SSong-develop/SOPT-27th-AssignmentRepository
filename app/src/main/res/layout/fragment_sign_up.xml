<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="mainviewModel"
            type="com.example.soptseminar.presentation.viewmodel.MainViewModel" />
        <variable
            name="user"
            type="com.example.soptseminar.model.User" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.signup.SignUpFragment">

        <TextView
            android:id="@+id/signUp_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="57dp"
            android:text="@string/name_text"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/signUp_name_edtxt"
            android:layout_width="0dp"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edt_background"
            android:hint="@string/name_hint_text"
            android:paddingStart="@dimen/default_margin"
            android:inputType="textPersonName"
            android:textSize="@dimen/textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/signUp_name_txt"
            app:layout_constraintTop_toBottomOf="@+id/signUp_name_txt"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/signUp_email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="@string/email_text"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/signUp_name_edtxt"
            app:layout_constraintTop_toBottomOf="@+id/signUp_name_edtxt" />

        <EditText
            android:id="@+id/signUp_email_edt"
            android:layout_width="0dp"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/textSize"
            android:background="@drawable/edt_background"
            android:paddingStart="@dimen/default_margin"
            android:hint="@string/email_hint_text"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/signUp_email_txt"
            app:layout_constraintTop_toBottomOf="@+id/signUp_email_txt"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/signUp_pass_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="@string/password_text"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"
            app:layout_constraintStart_toStartOf="@+id/signUp_email_edt"
            app:layout_constraintTop_toBottomOf="@+id/signUp_email_edt" />

        <EditText
            android:id="@+id/signUp_pass_edt"
            android:layout_width="0dp"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edt_background"
            android:hint="@string/pass_hint_text"
            android:inputType="textPassword"
            android:paddingStart="@dimen/default_margin"
            android:textSize="@dimen/textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/signUp_pass_txt"
            app:layout_constraintTop_toBottomOf="@+id/signUp_pass_txt"
            tools:ignore="RtlSymmetry" />

        <!-- button click need-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUp_ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="127dp"
            android:text="@string/signUp_btn_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/soptYellow"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/mainBlack"
            app:layout_constraintTop_toBottomOf="@+id/signUp_pass_edt"
            app:layout_constraintStart_toStartOf="@+id/signUp_pass_edt"
            app:layout_constraintEnd_toEndOf="@+id/signUp_pass_edt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
